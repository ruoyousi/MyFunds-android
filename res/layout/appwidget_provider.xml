<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:background="@drawable/widget_display"
	android:gravity="center_vertical">

	<TextView android:id="@+id/appwidget_title"
		android:layout_height="wrap_content" android:text="@string/app_name"
		android:layout_width="fill_parent" android:gravity="center_horizontal"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/dark_grey" />

	<TextView android:id="@+id/appwidget_text"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:gravity="center_horizontal" android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="@color/black" />

</LinearLayout>